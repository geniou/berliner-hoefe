<% title "Locations" %>

<%= form_tag(:action => "massoperation", :controller => "locations") do %>
<table>
  <tr>
    <th></th>
    <th>name</th>
    <th>type</th>
    <th>published on</th>
    <th>on map</th>
    <th>show detail page</th>
  </tr>
  <% for location in @locations %>
    <tr>
      <td><%= check_box_tag('massoperation[]', location.id) %></td>
      <td><%= location.name %></td>
      <td><%= location.classification %></td>
      <td><%= location.published_on %></td>
      <td><%= location.on_map %></td>
      <td><%= location.show_detail %></td>
      <td><%= link_to "Show", location %></td>
      <td><%= link_to "Edit", edit_admin_location_path(location) %></td>
      <td><%= link_to "Destroy", admin_locations_path, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<%= select_tag(:do, options_for_select(['publish', 'unpublish', ['on map', 'show_on_map'], ['not on map', 'hide_on_map'], ['show detail page', 'show_datail'], ['no detail page', 'hide_detail']])) %>
<%= submit_tag("Run") %>
<% end %>

<p><% link_to "New Location", new_admin_location_path %></p>
