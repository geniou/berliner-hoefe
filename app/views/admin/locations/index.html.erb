<% title "Locations" %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Published On</th>
    <th>Slug</th>
    <th>Type</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>
  <% for location in @locations %>
    <tr>
      <td><%= location.name %></td>
      <td><%= location.description %></td>
      <td><%= location.published_on %></td>
      <td><%= location.slug %></td>
      <td><%= location.type %></td>
      <td><%= location.latitude %></td>
      <td><%= location.longitude %></td>
      <td><%= link_to "Show", location %></td>
      <td><%= link_to "Edit", edit_admin_location_path(location) %></td>
      <td><%= link_to "Destroy", admin_locations_path, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Location", new_admin_location_path %></p>
