- @title = @location.name

%article.section
  - if @location.header_image
    .header-image
      %h1= @location.name
      = image_tag(@location.header_image.image.url(:large))

  .description
    = markdown(@location.description)

  %ul.images
    - @location.slideshow_images.each do |image|
      %li= link_to(image_tag(image.image.url(:small)), image.image.url(:large), { data: { slideshow: 'true' } })

.section
  %script
    app.map.locations = #{map_data([@location])}
    app.map.nearby = #{map_data(@nearby.to_a, additional: true)}
  #map
