<%= form_for @location do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :published_on %><br />
    <%= f.datetime_select :published_on %>
  </p>
  <p>
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <div id="map" class="map"></div>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <p><%= f.submit %></p>
<% end %>
